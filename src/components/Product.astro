---
import { Markdown } from 'astro/components'

const { slug, alt, title, description, cover, tag } = Astro.props
const permalink = `/product/${slug}`
---
<style global>
    @import "../styles/global.scss";
</style>

<article class="lg:px-10 sm:p-2 lg:flex">
    <div class="lg:flex lg:w-[550px] sm:w-full aspect-video">
        <a href="" title="">
            <img class="border border-slate-400 shadow-lg rounded-sm" alt={alt} src={cover} />
        </a>
    </div>

    <div class="lg:ml-10 prose">
        <span class="bg-amber-300 px-2 py-1 rounded-sm font-mono text-sm font-semibold">{tag}</span>
        <h2 class="mt-5">{title}</h2>
        <Markdown>{description}</Markdown>
        <a class="bg-sky-800 no-underline text-white py-3 px-5 rounded-sm text-center sm:w-full block" href={permalink} title="">Ver detalles</a>
    </div>
</article>